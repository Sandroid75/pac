{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-std=c99",
				"-fdiagnostics-color=always",
				"-fdiagnostics-show-option",
				"-g",
				"-O0",
				"-pedantic",
				"-Wall",
				"-Wextra",
				"-I${workspaceFolder}/pac/deps",
				"-I${workspaceFolder}/pac/src",
				"-g",
				"${workspaceFolder}/pac/src/main.c",
				"${workspaceFolder}/pac/src/pac.c",
				"${workspaceFolder}/pac/src/wsg.c",
				"${workspaceFolder}/pac/deps/z80/z80.c",
				"-o",
				"${workspaceFolder}/pac/${workspaceFolderBasename}",
				"`sdl2-config --cflags --libs`"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}